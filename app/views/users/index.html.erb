<% content_for :title do %>
BlogCast::Gestion des utilisateurs de BlogCast
<% end %>

<% content_for :robots do %> 
<meta name="robots" content="noarchive"/>
<meta name="robots" content="noindex, nofollow"/>
<% end %>

<h2>Gestion des utilisateurs de BlogCast</h2>

<h3>Membres actuels</h3>

<div class="archives users">
	<ul>
	<% for user in @users %>
		<li><%= link_to user.name, edit_user_path(user) %>

			<%= link_to user_path(user), :confirm => "Are you sure you want to delete this user?", :method => :delete do %>
			<%= image_tag "delete.png", :alt => "delete draft", :title => "delete draft" %>
			<% end %>
		</li>
	<% end %>
	</ul>
</div>

<% content_for :sidebar do %>
<div class="sidebar">
	<div class="block-content user_management">
		<% link_to "Nouvel utilisateur", new_user_path %>
		<%= link_to new_user_path do %>
		<%= image_tag "doc_plus.png", :alt => "Ajouter un utilisateur", :title => "Ajouter un utilisateur" %>
		<% end %>
	</div><!--block-content-->
</div><!--sidebar-->
<% end %>